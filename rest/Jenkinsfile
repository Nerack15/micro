pipeline {
    agent any
    tools {
        gradle 'Gradle 7.5.1' 
    }
    stages {
        stage ('Test & Build Artifact') {
            agent {
                docker {
                    image 'openjdk:11'
                    args '-v "$PWD":/rest'
                    reuseNode true
                }
            }
            steps {
                sh './gradlew clean build'
            }
        }
        stage('test') {
            steps {
                //sh 'gradle docker'
                echo 'test succesfull'
            }
        }
        stage('Build Docker Image') {
            steps {
                //sh 'gradle docker'
                echo 'succesfull'
            }
        }
        stage('Push Docker Image') {
            steps {
                //sh 'gradle dockerPush'
                echo 'succesfull'
            }
        }
    }
}

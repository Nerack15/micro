pipeline {
    agent any {
        docker {
            image 'docker:19.03.12'
        }
    }
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/Nerack15/micro.git'
            }
        }
        stage('Build Image') {
            steps {
                sh 'docker build -t mi-proyecto .'
            }
        }
        stage('Push Image') {
            steps {
                sh 'docker login -u $DOCKER_USER -p $DOCKER_PASSWORD'
                sh 'docker tag mi-proyecto $DOCKER_USER/mi-proyecto'
                sh 'docker push $DOCKER_USER/mi-proyecto'
            }
        }
    }
}

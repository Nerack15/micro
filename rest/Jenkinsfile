pipeline {
    agent {
        docker {
            image 'openjdk:8-jdk'
        }
    }
    stages {
        stage('Clone') {
            steps {
                git 'https://github.com/user/mi-proyecto.git'
            }
        }
        stage('Build') {
            steps {
                sh './gradlew build'
            }
        }
    }
}

pipeline {
    agent any
    tools {
        gradle 'Gradle 7.5.1'
    }
    stages {
        stage('Build') {
            steps {
                script{
                sh """
                cd rest
                gradle build
                """
                }
            }
        }
        stage('test') {
            steps {
                //sh 'gradle docker'
                echo 'test succesfull'
            }
        }
        stage('Build & Push Docker Image') {
            steps {
                script{
                    sh"""
                      cd rest
                      docker login -u $DOCKER_USER -p $DOCKER_PASSWORD
                      docker build -t nerack/test:1.0 .
                      docker push $DOCKER_USER/test:1.0
                      """
                      }
                echo 'succesfull'
            }
        }
        stage('Deployment') {
            steps {
                script{
                    sh """
                    az login --service-principal --username 410daf6b-46a0-41bb-b592-19c34260fca4 --password uyn8Q~hbz4y9PNB_9ZBkB8KtwYYz5lrMfG4Ymc5P --tenant 10f7b6ca-75cb-4bc7-b585-9809d7531a43
                    az account set --subscription b68641c8-eca9-416e-80c2-05e8fcb71cfc
                    az aks get-credentials --resource-group nerack-resources --name nerack-cluster
                    """
                }
            }
        }
    }
}
